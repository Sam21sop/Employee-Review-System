<!-- Assign employees to participate in another employee's performance review -->
<h1>Admin - Assign Performance Reviews</h1>
<form action="/admin/assign-reviews" method="POST">
    <label for="employee">Select Employee:</label>
    <select id="employee" name="employee">
        <% employees.forEach(employee => { %>
            <option value="<%= employee.id %>"><%= employee.username %></option>
        <% }); %>
    </select>
    <br>
    <label for="review">Select Review:</label>
    <select id="review" name="review">
        <% reviews.forEach(review => { %>
            <option value="<%= review.id %>"><%= review.title %></option>
        <% }); %>
    </select>
    <br>
    <button type="submit">Assign Review</button>
</form>
